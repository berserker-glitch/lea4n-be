// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

// ===========================================
// USER MODEL
// ===========================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations - Each user owns their subjects, conversations, and files
  subjects        Subject[]
  conversations   Conversation[]
  files           File[]
  messageFeedback MessageFeedback[]

  @@map("users")
}

// ===========================================
// SUBJECT MODEL
// ===========================================
// Subjects are isolated per user - each user has their own subjects
model Subject {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  isPinned    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Owner relation - strict isolation
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // A subject can have multiple conversations and files
  conversations Conversation[]
  files         File[]

  @@index([userId])
  @@map("subjects")
}

// ===========================================
// CONVERSATION MODEL
// ===========================================
// Conversations belong to a subject, which belongs to a user
// This creates a hierarchy: User -> Subject -> Conversation
model Conversation {
  id        String   @id @default(uuid())
  title     String
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Subject relation - conversation belongs to a subject
  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  // Direct user relation for efficient querying and double validation
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Messages within this conversation
  messages Message[]

  @@index([subjectId])
  @@index([userId])
  @@map("conversations")
}

// ===========================================
// MESSAGE MODEL
// ===========================================
// Messages belong to a conversation
model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text
  role      MessageRole
  createdAt DateTime @default(now())

  // Conversation relation
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Feedback relation
  feedback MessageFeedback?

  @@index([conversationId])
  @@map("messages")
}

// ===========================================
// MESSAGE FEEDBACK MODEL
// ===========================================
// Feedback on AI messages (like/dislike with optional details)
model MessageFeedback {
  id        String   @id @default(uuid())
  isLiked   Boolean  // true = like, false = dislike
  reasons   String?  @db.Text // JSON array of reasons for dislike
  feedback  String?  @db.Text // Optional custom feedback text
  createdAt DateTime @default(now())

  // Message relation - feedback is for a specific message
  messageId String   @unique
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  // User who gave the feedback
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([userId])
  @@map("message_feedback")
}

// ===========================================
// FILE MODEL
// ===========================================
// Files uploaded by users, associated with subjects
model File {
  id            String         @id @default(uuid())
  name          String
  originalName  String
  mimeType      String
  size          Int
  type          FileType
  path          String
  tag           FileTag?
  processStatus ProcessStatus  @default(PENDING)
  processedAt   DateTime?
  chunkCount    Int            @default(0)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Subject relation - file belongs to a subject
  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  // Direct user relation for efficient querying
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // RAG chunks
  chunks FileChunk[]

  @@index([subjectId])
  @@index([userId])
  @@map("files")
}

// ===========================================
// FILE CHUNK MODEL
// ===========================================
// Processed text chunks from uploaded files for RAG
model FileChunk {
  id         String   @id @default(uuid())
  content    String   @db.Text // The actual text content
  chunkIndex Int // Position in the original file
  startPage  Int? // For PDFs - which page
  endPage    Int? // For PDFs - end page
  metadata   String?  @db.Text // JSON metadata (headers, section titles, etc.)
  createdAt  DateTime @default(now())

  // File relation
  fileId String
  file   File   @relation(fields: [fileId], references: [id], onDelete: Cascade)

  // Embedding relation
  embedding FileEmbedding?

  @@index([fileId])
  @@map("file_chunks")
}

// ===========================================
// FILE EMBEDDING MODEL
// ===========================================
// Vector embeddings for semantic search
model FileEmbedding {
  id        String   @id @default(uuid())
  vector    String   @db.MediumText // JSON array of floats (e.g., 1536 dimensions)
  model     String // e.g., "openai/text-embedding-3-small"
  createdAt DateTime @default(now())

  // Chunk relation (1:1)
  chunkId String    @unique
  chunk   FileChunk @relation(fields: [chunkId], references: [id], onDelete: Cascade)

  @@index([chunkId])
  @@map("file_embeddings")
}

// ===========================================
// ENUMS
// ===========================================
enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum FileType {
  PDF
  IMAGE
  DOCUMENT
  OTHER
}

enum FileTag {
  EXAM
  EXERCISE
  COURSE
}

enum ProcessStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
