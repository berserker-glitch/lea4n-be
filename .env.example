# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MySQL connection string for Prisma
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DB_URL="mysql://root:password@localhost:3306/lea4n_db"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Secret key for signing JWT tokens (use a strong, random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Token expiration time (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN="7d"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port the server will run on
PORT=4000

# Node environment (development, production, test)
NODE_ENV="development"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Bcrypt salt rounds for password hashing (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# Rate limiting: max requests per window
RATE_LIMIT_MAX=100

# Rate limiting: window in minutes
RATE_LIMIT_WINDOW_MS=15

# ===========================================
# CORS CONFIGURATION (Production)
# ===========================================
# Frontend URL for CORS (required in production)
# Example: https://lea4n.com or https://your-frontend-domain.com
CORS_ORIGIN="https://your-frontend-domain.com"

# ===========================================
# SMTP CONFIGURATION (Email Verification)
# ===========================================
# SMTP server host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST="smtp.gmail.com"

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication username
SMTP_USER="your-email@gmail.com"

# SMTP authentication password (use app password for Gmail)
SMTP_PASSWORD="your-app-password"

# From email address for outgoing emails
# From email address for outgoing emails
SMTP_FROM="noreply@lea4n.com"

# ===========================================
# FILE UPLOADS (Coolify Volume Mount)
# ===========================================
# Directory for file uploads. For Coolify, use the container mount path.
# Source: /data/coolify/applications/YOUR_APP_ID
# Destination: /files-uploaded
UPLOADS_DIR="/files-uploaded"

# ===========================================
# GITHUB OAUTH CONFIGURATION
# ===========================================
# Create a GitHub OAuth App: GitHub → Settings → Developer Settings → OAuth Apps
# Set Authorization callback URL to: https://your-frontend-domain.com/auth/github/callback

# GitHub OAuth Client ID
GITHUB_CLIENT_ID="your-github-client-id"

# GitHub OAuth Client Secret
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Frontend URL (for callback redirect)
FRONTEND_URL="http://localhost:3000"
